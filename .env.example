# Postgres
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name

# pgAdmin
PGADMIN_DEFAULT_EMAIL=your_email@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# n8n basic auth
N8N_BASIC_AUTH_USER=your_n8n_username
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# n8n API key for MCP server (generate at Settings > API in n8n UI)
N8N_API_KEY=your_n8n_api_key_here

# n8n URLs (localhost is OK only if you access n8n from the same machine)
N8N_PROTOCOL=http
N8N_HOST=localhost
WEBHOOK_URL=http://localhost:5678/
N8N_EDITOR_BASE_URL=http://localhost:5678/

# n8n image tag name (your custom build)
N8N_IMAGE_NAME=btgunco-n8n:1.123.5-imagemagick

# Memory / stability
NODE_OPTIONS=--max-old-space-size=4096
N8N_CONCURRENCY_PRODUCTION_LIMIT=2
N8N_PUSH_BACKEND=websocket

# Execution pruning
EXECUTIONS_DATA_MAX_AGE=168
EXECUTIONS_DATA_SAVE_ON_SUCCESS=none
EXECUTIONS_DATA_SAVE_ON_PROGRESS=false

# Timezone
GENERIC_TIMEZONE=America/Chicago

N8N_RUNNERS_ENABLED=true
N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Keep this FALSE if you use env vars inside Code nodes/expressions.
# If you never do, you can set it to true for tighter security.
N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# SearXNG secret key (for security)
SEARXNG_SECRET=your_searxng_secret_key_here
